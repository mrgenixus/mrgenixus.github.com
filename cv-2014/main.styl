padding-start(dimension)
  -webkit-padding-start dimension
  -moz-padding-start dimension
  -o-padding-start dimension
  padding-start dimension

padding-end(dimension)
  -webkit-padding-end dimension
  -moz-padding-end dimension
  -o-padding-end dimension
  padding-end dimension

body
  background-color #7E4415
  font-family 'Open Sans', sans-serif

#objective
  display none
  &:target
    display block

@media screen and (min-width: 840px)
  body
    background url(phx-park.jpg)
    background-repeat no-repeat
    background-size cover
    background-attachment fixed

a
  text-decoration none
  font-style italic
  color white
  display inline-block
  background-color #4F628E
  padding .2em 8px
  margin 0.2em 0px
  border-radius 0px

  &:target
    background-color #7E4415

  @media print
    color black
    &[href]:after
      content " <" attr(href) ">"
    &[href=""]:after,
    &[href^="#"]:after,
    &[href^="tel"]:after
      content ''

p
  font-family Georgia, times

h2, h3, h4, h5, h6
  -webkit-margin-before 0
  -webkit-margin-after 0

dd, section, header
  page-break-inside avoid

dt
  page-break-after avoid

.resume
  background-color white

  &:before
    height 160px
    width 100%
    background url(phx-park.jpg)
    background-size cover
    background-clip content-box
    background-repeat no-repeat
    display block
    content ''

  > header,
  > section
    padding 0 26px
    position relative

  > section > section
    position relative
    padding-left 26px

  @media screen and (min-width: 1034px)
    width 940px
    margin-left 5%

  @media screen and (min-width: 840px)
    background-color rgba(255,255,255,.8)
    &:before
      height 0px

    > section
      margin-left 248px
      > header
        margin-left -248px
        border-top 1px solid black
      > section
        border-left 1px solid #4F628E
        > header
          position absolute
          left -248
          width 248px

  @media print
    > header,
    > section > header
      text-align right

#work
  position relative

  aside
    position absolute
    right 26
    top 0

    a
      background-color #D4C26A

      &[href="#none"]
        display none

      &[href="#none"],
      &[href=""]
        background-color #7E6C15 

#work aside a:target,
#featured:target [name=featured],
#work:target [name=work]
  background-color #7E6C15

#featured:target #work aside a[href="#none"],
#work:target aside a[href="#none"],
#work:target aside a[href=""],
#featured:target #work aside a[href=""]
  background-color #D4C26A !important

@media screen and (max-width: 575px)
  #work aside a
    display none

  #work aside a[href="#none"]
    display inline-block

@media print
  #work aside
    display none

dl.projects,
dl.roles
  padding-top 1.5em

@media screen and (min-width: 575px)

  dl.projects.roles:before
    content "Projects / Roles"
    font-weight bold
    color white
    display inline-block
    background-color #4F628E
    padding .2em 8px
    margin-bottom 0.2em
    position absolute
    right 0

  .skills
    display block

#featured:target .featured + dd.project-details
  display block

.featured + dd.product-details
  position relative

@media screen

  #featured:target .featured a,
  .project-name.featured:target a,
  #work:target .featured a
    &:after
      font-style italic
      content 'Featured'
      text-decoration none
      font-style italic
      color white
      display block
      background-color #7E4415
      padding 0.2em 8px
      display inline-block
      margin 0 0.8em

    &:before
      content ''

  .featured a:before
    font-style italic
    content ' Featured: '
    color #7E4415
    font-variant small-caps

#work:target dd.project-details
  display block

ul.skills
  @media screen and (max-width: 575px), print
    padding-start(0px)
    padding-end(0px)

    &:before
      font-weight bold
    
    li > ul
      width 0
      display inline-block
      height 0
      overflow hidden
    
    li > ul
      margin-left -0.7em

  @media screen and (min-width: 575px)
    padding-start(40px)
    padding-end(40px)

    position relative
    padding-top 2.25em
    padding-bottom 1.5em
    background-color #D4C26A
    border 1px solid #7E6C15

    &:before
      font-style italic
      text-decoration none
      font-style italic
      color white
      display block
      background-color #4F628E
      padding .2em 8px
      position absolute
      left 0
      top 0

  &:before
    content 'Skills:'

  li
    display inline
    font-family 'Monserrat', Verdana, Geneva, sans-serif
    &:last-of-type:before
      content 'and '

    &:first-of-type:before
      content ''

    &:last-of-type:after
      content ''

    &:after
      content ','

  ul
    display inline-block
    padding-start(0)
    padding-end(0)
    &:before
      content "("
    &:after
      content ")"

  > ul > ul
    &:before
      content "["
    &:after
      content "]"

dt.project-name
  a
    background inherit
    color inherit
    font-style inherit
    display inherit
    margin inherit
    padding inherit

  a:hover
    color #4F628E
    text-decoration underline

  &:target + dd.project-details
    display block

@media screen
  dd.project-details
    display none

ul.references
  list-style none
  padding-start(0)
  padding-end(0)
  padding-top 1.7em

  .name
    @media screen and (max-width: 575px)
      display block 

    @media screen and (min-width: 575px)
      width 248px
      display inline-block

  a
    font-style none
    font-family Georgia, times

  &:before
    content "Please Contact:"
    font-weight bold
    color white
    display inline-block
    background-color #7E6C15
    padding .2em 8px
    margin-bottom 0.2em
    position absolute
    top 0
